{
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "master",
      "includeMergedTags": true
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "registry": "https://registry.npmjs.org/"
    },
    "bootstrap": {
      "ignore": "rpg",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent"
}
